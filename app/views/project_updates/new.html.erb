<h1 class="flex justify-center text-2xl mt-10">Post New Update</h1>
<div class="mt-6 flex justify-center">
  <div class="w-3/4 xl:w-1/2">
    <%= simple_form_for([@project, @project_update], url: project_project_updates_path) do |f| %>
      <%= f.error_notification %>
      <span class="text-gray-700">Details</span>
      <%= f.input :details, label: false, required: true, autofocus: true,
                  input_html: { autocomplete: "details",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>
      <button><%= f.button :submit, "Post", class: "text-md py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"%></button>
      <button class="text-md py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"><%= link_to 'Back', projects_path %></button>
    <% end %>
  </div>
</div>
