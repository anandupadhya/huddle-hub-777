<% if @profile.photo.attached? %>
  <%= cl_image_tag @profile.photo.key %>
<% end %>

<div id="map"
     style="width: 300px; height: 300px;"
     data-markers="<%= @location.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<h3>Name: <%= @profile.user.first_name %> <%= @profile.user.last_name %></h3>
<h3>Username: <%= @profile.user.username %> </h3>
<h3>Email: <%= @profile.user.email %> </h3>
<h3>City: <%= @profile.address %> </h3>

<%= link_to "Edit Profile", edit_profile_path(@profile)%>
