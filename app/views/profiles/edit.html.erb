<h1>Add Profile Picture</h1>

<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :photo, as: :file,
                required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Upload" %>
  </div>
<% end %>

<%= link_to 'Cancel', projects_path %>
