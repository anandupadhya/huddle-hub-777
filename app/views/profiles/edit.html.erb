<h1 class="text-primary-color pb-2 mt-10 mb-4 text-4xl font-bold text-center">Edit Profile</h1>
<div class="mt-6 flex justify-center">
  <div class="w-3/4 xl:w-1/2">
    <%= simple_form_for(@profile) do |f| %>
      <%= f.error_notification %>
      <span class="text-gray-700">About Me</span>
      <%= f.input :description, autofocus: true, label:false,
                    input_html: {
                      class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-gray-500 focus:bg-white
                      focus:ring-0"  } %>
      <span class="text-gray-700">City</span>
      <%= f.input :address, autofocus: true, label:false,
                    input_html: { autocomplete: "City",
                      class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-gray-500 focus:bg-white
                      focus:ring-0"  } %>
      <span class="text-gray-700">Add Photo</span>
      <%= f.input :photo, as: :file, label:false, input_html: {
                      class: "mt-1 mb-6"  } %>
      <button><%= f.button :submit, "Update", class: "text-md py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"%></button>
      <button class="text-md ml-3 py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"><%= link_to 'Back', profile_path(@profile)  %></button>
    <% end %>
  </div>
</div>
