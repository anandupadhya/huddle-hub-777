<h1 class="flex justify-center text-2xl mt-10">Edit Profile</h1>
<div class="mt-6 flex justify-center">
  <div class="w-3/4 xl:w-1/2">
    <%= simple_form_for(@profile) do |f| %>
      <%= f.error_notification %>
      <span class="text-gray-700">City</span>
      <%= f.input :address, required: true, autofocus: true, label:false,
                    input_html: { autocomplete: "City",
                      class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-gray-500 focus:bg-white
                      focus:ring-0"  } %>
      <span class="text-gray-700">Add Photo</span>
      <%= f.input :photo, as: :file, label:false, input_html: {
                      class: "mt-1 mb-6"  } %>
      <button><%= f.button :submit, "Create", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-1 rounded-full"%></button>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-1 rounded-full"><%= link_to 'Back', profile_path(@profile)  %></button>
    <% end %>
  </div>
</div>
