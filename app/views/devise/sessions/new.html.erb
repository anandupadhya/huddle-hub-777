<h1 class="text-primary-color pb-2 mt-10 mb-4 text-4xl font-bold text-center">Welcome Back</h1>
<div class="mt-6 flex justify-center">
  <div class="w-3/4 xl:w-1/2">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <span class="text-gray-700">Email</span>
      <%= f.input :email, label: false, required: true,autofocus: true,
                  input_html: { autocomplete: "email",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>
      <span class="text-gray-700">Password</span>
      <%= f.input :password, label: false, required: true,autofocus: true,
                  input_html: { autocomplete: "current-password",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>
      <div class="mt-4">
      <button><%= f.button :submit, "Sign In", class: "text-md py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"%></button>
      </div>
    <% end %>
      <br><br>
  </div>
</div>
