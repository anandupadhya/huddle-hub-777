<h1 class="text-primary-color pb-2 mt-10 mb-4 text-4xl font-bold text-center">Sign Up</h1>
<div class="mt-6 flex justify-center">
  <div class="w-3/4 xl:w-1/2">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <span class="text-gray-700">First Name</span>
      <%= f.input :first_name, label: false, required: true,autofocus: true,
                  input_html: { autocomplete: "first name",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>
      <span class="text-gray-700">Last Name</span>
      <%= f.input :last_name, label: false, required: true,autofocus: true,
                  input_html: { autocomplete: "last name",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>
      <span class="text-gray-700">Username</span>
      <%= f.input :username, label: false, required: true,autofocus: true,
                  input_html: { autocomplete: "username",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>
      <span class="text-gray-700">Email</span>
      <%= f.input :email, label: false, required: true,autofocus: true,
                  input_html: { autocomplete: "email",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>

      <span class="text-gray-700">Password</span>
      <%= f.input :password, label: false, required: true,
                  input_html: { autocomplete: "name",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>

      <span class="text-gray-700">Confirm password</span>
      <%= f.input :password_confirmation, label: false, required: true,autofocus: true,
                  input_html: { autocomplete: "name",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>


      <div class="mt-4">
      <button><%= f.button :submit, "Sign Up", class: "text-md py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"%></button>
      <button class="text-md py-1 px-6 ml-3 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"><%= link_to 'Back', projects_path %></button>
      </div>
    <% end %>
      <br><br>
  </div>
</div>
