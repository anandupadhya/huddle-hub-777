<h1>New Project</h1>

<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "description" }%>
    <%= f.input :details,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "details" }%>
    <%= f.input :status,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "status" }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create" %>
  </div>
<% end %>

<%= link_to 'Cancel', projects_path %>
