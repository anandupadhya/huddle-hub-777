<h1 class="flex justify-center text-2xl mt-10">Create New Project</h1>
<div class="mt-6 flex justify-center">
  <div class="w-3/4 xl:w-1/2">
    <%= simple_form_for(@project) do |f| %>
      <%= f.error_notification %>
      <span class="text-gray-700">Name</span>
      <%= f.input :name, label: false, required: true,autofocus: true,
                  input_html: { autocomplete: "name",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>
      <span class="text-gray-700">Description</span>
      <%= f.input :description,label: false, required: true, autofocus: true,
                  input_html: { autocomplete: "description",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>
      <span class="text-gray-700">Category</span>
      <%= f.association :category, label: false, input_html: {
                      class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-gray-500 focus:bg-white
                      focus:ring-0" }%>
      <%#= f.input :status, collection: @statuses %>
      <span class="text-gray-700">Details</span>
      <%= f.input :details, label: false, required: true, autofocus: true,
                  input_html: { autocomplete: "details",
                    class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                    border-transparent focus:border-gray-500 focus:bg-white
                    focus:ring-0" }%>
      <button><%= f.button :submit, "Create", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-1 rounded-full"%></button>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-1 rounded-full"><%= link_to 'Back', projects_path %></button>
    <% end %>
  </div>
</div>
