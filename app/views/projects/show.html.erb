<h1><%= @project.name %></h1>

<h3>Category</h3>
<p><%= @project.category.name %></p>

<h3>Owner</h3>
<p><%= @project.user.first_name %> <%= @project.user.last_name %></p>

<h3>Description</h3>
<p><%= @project.description %></p>

<h3>Details</h3>
<p><%= @project.details %></p>

<h3>Status</h3>
<p><%= @project.status %></p>

<h3>Project Updates</h3>
<p><%= @project.project_updates.count %></p>

<h3>Collaborators (<%= @project.collaborations.count %>)</h3>
<% @project.collaborations.each do |c| %>
  <p>Name: <%= c.user.first_name %> Status: <%= c.status %></p>
<% end %>
