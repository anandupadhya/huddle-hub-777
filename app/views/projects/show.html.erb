<div class="grid max-w-screen-xl mx-auto px-4 py-4 grid-cols-1 lg:grid-cols-3 gap-8">
  <%# PROJECT INFO %>
  <div class="lg:col-span-2">
    <p class="pb-1 text-gray-400"><%= @project.category.name %></p>
    <div class="pb-2 mb-6 border-b-2 border-gray-400 text-4xl font-bold">
      <%= @project.name.upcase %>
      <% if policy(@project).edit? %>
        <%= link_to edit_project_path(@project) do %>
          <i class="fas fa-pen text-lg text-gray-400"></i>
        <% end %>
      <% end %>
    </div>
    <div id="map" style="height: 300px;"
     data-markers="<%= @location.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
     class="map w-full h-96 mb-6 bg-blue-100 rounded-lg
            flex justify-center items-center">
    </div>
    <div class="mb-4">
      <% if user_signed_in? %>
        <% if @project.user.id != current_user.id && !@project.collaborations.exists?(['user_id = ?', current_user.id]) %>
          <%= simple_form_for([@project, @collaboration]) do |f| %>
            <div class="hidden"><%= f.input :project_id, input_html: { value: "#{@project.id}" } %></div>
            <button><%= f.button :submit, "Ask to join!", class: "text-md py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"%></button>
          <% end %>
        <% elsif @project.status == "completed" %>
          <div class="text-md py-1 px-6 bg-gray-400 text-white-900 rounded transition duration-300">This project is complete.</div>
        <% elsif @project.collaborations.exists?(['user_id = ?', current_user.id]) && @project.collaborations.exists?(['status = ?', 'pending']) %>
          <div class="text-md py-1 px-6 bg-gray-400 text-white-900 rounded transition duration-300">Request pending.</div>
        <% elsif (@project.collaborations.exists?(['user_id = ?', current_user.id]) && @project.collaborations.exists?(['status = ?', 'accepted'])) || @project.user == current_user%>
          <button class="text-md py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"><%= link_to "Post Update", "/projects/#{@project.id}/project_updates/new" %></button>
        <% elsif @project.collaborations.exists?(['user_id = ?', current_user.id]) && @project.collaborations.exists?(['status = ?', 'denied']) %>
          <div class="text-md py-1 px-6 bg-gray-400 text-white-900 rounded transition duration-300">Your request has been denied.</div>
        <% end %>
      <% end %>
    </div>
    <div class="mb-4">
      <p class="text-md text-gray-600 font-bold">Project Description</p>
      <p><%= @project.description %></p>
    </div>
    <div class="mb-4">
      <p class="text-md text-gray-600 font-bold">Project Details</p>
      <p><%= @project.details %></p>
    </div>
    <div class="mb-4">
      <p class="text-md text-gray-600 font-bold">Project Updates</p>
      <% @project.project_updates.each do |post| %>
        <%= post.details %>
      <% end %>
    </div>
  </div>

  <%# COLLABORATORS INFO %>
  <div class="lg:col-span-1">
    <p class="mb-2 text-1xl font-bold">Project Owner</p>
    <div class="bg-gray-200 p-4 mb-6 rounded-lg flex space-x-4 items-center">
      <div class="profile-img w-36 h-36 p-0 bg-red-300 rounded-lg flex flex-shrink-0 justify-center items-center text-center">
        <% if @project.user.profile.photo.attached? %>
          <%= cl_image_tag @project.user.profile.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face, class: "profile-img w-36 h-36 p-0 bg-red-300 rounded-lg flex flex-shrink-0 justify-center items-center text-cente" %>
        <% else %>
          <%= image_tag "dummy-profile-pic", width: 150, height: 150, class: "profile-img p-0 rounded-lg" %>
        <% end %>
      </div>
      <p class="text-2xl"><%= @project.user.first_name %> <%= @project.user.last_name %></p>
    </div>
    <p class="mb-2 text-1xl font-bold">Project Collaborators (<%= @project.collaborations.count %>)</p>
    <div class="bg-gray-200 p-4 mb-2 rounded-lg">
      <% @project.collaborations.each do |c| %>
        <div class="bg-gray-200 p-0 mb-2 rounded-lg flex space-x-4 items-center">
          <div class="profile-img w-20 h-20 p-0 bg-red-300 rounded-lg flex flex-shrink-0 justify-center items-center text-center">
            Image
          </div>
          <div class="flex">
            <div><%= c.user.first_name %> <%= c.user.last_name %><br><%= c.status %></div>
            <div class="ml-3">
              <% if @project.user == current_user && c.status == 'pending' %>
                <%= simple_form_for([@project, @collaboration], url: "/projects/#{@project.id}/collaborations/#{c.id}", method: :put) do |f| %>
                  <div class="hidden"><%= f.input :status, input_html: { value: 'accepted' } %></div>
                  <button><%= f.button :submit, "Accept", class: "m-1 text-md py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"%></button>
                <% end %>
                <%= simple_form_for([@project, @collaboration], url: "/projects/#{@project.id}/collaborations/#{c.id}", method: :put) do |f| %>
                  <div class="hidden"><%= f.input :status, input_html: { value: 'denied' } %></div>
                  <button><%= f.button :submit, "Deny", class: "m-1 text-md py-1 px-6 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300"%></button>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
